{
    "manifest_version": 3,
    "name": "LinkedIn Message Scanner",
    "version": "1.0",
    "description": "A browser extension for scanning LinkedIn messages",
    "permissions": [
      "identity", "tabs", "storage", "activeTab"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "host_permissions": [
      "https://www.linkedin.com/*"
    ]
  }  